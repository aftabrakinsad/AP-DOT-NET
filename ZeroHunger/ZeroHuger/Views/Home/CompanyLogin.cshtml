@model BLL.DTOs.Company_loginDTO
@{
    ViewBag.Title = "CompanyLogin";
}

<form action="" method="POST" enctype="multipart/form-data">

    <h2>Company Login</h2>
    <table class="container">

        <tr>
            <td>
                <label for="Company ID">

                    <input type="number" name="com_id" id="com_id" placeholder="ID" /><br>
                </label>
            </td>

        </tr>

        <tr>
            <td>
                <label for="Company Password">
                    <input type="password" name="com_pass" id="com_pass" placeholder="Password" /><br>
                </label>
            </td>
            <td>
                <span>
                    @if (TempData["msg"] != null)
                    {
                        <span class="alert alert-danger">@TempData["msg"]</span>
                    }
                </span>
            </td>
        </tr>

        <tr>
            <td>
                <input type="submit" name="submit" value="Login">
            </td>
        </tr>
    </table>
</form>

<div>
    @Html.ActionLink("Back to List", "CompanyLogin")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}